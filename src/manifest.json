{
  "manifest_version": 3,
  "name": "Google Chat - Highlight pinned chats",
  "version": "1.0.0",
  "action": {
    "default_title": "Google Chat - Highlight pinned chats"
  },
  "description": "Highlights pinned chats in Google Chat",
  "author": "vincent.remond@gmail.com",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/chat*",
        "https://chat.google.com/*"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}